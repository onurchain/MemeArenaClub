{
  "name": "meme-battle-arena",
  "version": "1.0.0",
  "description": "Advanced DeFi gaming platform with winner-takes-all token battles and NFT rewards",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "start": "node dist/index.js",
    "client:dev": "vite",
    "client:build": "tsc && vite build",
    "server:dev": "tsx watch server/index.ts",
    "server:build": "esbuild server/index.ts --bundle --platform=node --target=node16 --outfile=dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "contract:compile": "hardhat compile",
    "contract:deploy": "hardhat run scripts/deploy.js --network bsc",
    "contract:verify": "hardhat verify --network bsc"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
